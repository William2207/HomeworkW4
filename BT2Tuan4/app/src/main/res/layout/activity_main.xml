<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Tiêu đề căn ngang -->
    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#e316ea"
        android:fontFamily="sans-serif"
        android:text="My Application"
        android:textColor="#FFFF"
        android:textSize="18sp"
        android:gravity="center"/>

    <!-- Nội dung chính -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_nhom1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#00FFFF"
                android:text="01"
                android:gravity="center"
                android:textColor="#FF5722"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txt_nhom2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#00FF66"
                android:text="02"
                android:gravity="center"
                android:textColor="#FF5722"
                android:textSize="30sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_nhom3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#FF6699"
                android:text="03"
                android:gravity="center"
                android:textColor="#FF5722"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txt_nhom4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#00FF66"
                android:text="04"
                android:gravity="center"
                android:textColor="#FF5722"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txt_nhom5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#003399"
                android:text="05"
                android:gravity="center"
                android:textColor="#FF5722"
                android:textSize="30sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_nhom6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:background="#FF3333"
                android:text="06"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txt_nhom7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#0099FF"
                android:text="06"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_nhom8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#FFFF00"
                android:text="07"
                android:gravity="center"
                android:textColor="#FF5722"
                android:textSize="30sp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
